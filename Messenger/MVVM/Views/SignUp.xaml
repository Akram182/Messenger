<Window x:Class="Messenger.MVVM.Views.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger.MVVM.Views"
        mc:Ignorable="d"
        Title="SignUp" Height="420" Width="350"
        ResizeMode="NoResize"
    >
    <Grid Background="#363636">
        <TextBlock Text="Sign Up" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50" Foreground="White"/>


        <StackPanel Margin="0,100,0,00">
            <TextBlock Text="Login" Width="150" FontWeight="Medium" Margin="0,10,0,5" Foreground="White"/>
            <TextBox x:Name="LoginTextBox" Width="150" BorderBrush="#1fde00" BorderThickness="2"  Padding="1" Background="#363636" Foreground="White"/>


            <TextBlock Text="Password" Width="150" FontWeight="Medium" Padding="1" Margin="0,30,0,5" Foreground="White"/>
            <PasswordBox x:Name="PasswordTextBox" Width="150" BorderBrush="#1fde00" BorderThickness="2" Padding="1" Background="#363636" Foreground="White" />

            <TextBlock x:Name="ErrorTextBlock" Background="Transparent" Width="150" Margin="0,5" Foreground="Red"/>
            <Button x:Name="RegistrButton" Content="Sumbit" Width="150" Height="25" Margin="0,5" Background="#1fde00" BorderBrush="#1fde00" Foreground="White" FontSize="15" FontWeight="Bold" Padding="2" Click="SignUp_Click"/>

        </StackPanel>
    </Grid>
</Window>
